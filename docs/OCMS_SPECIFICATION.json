            },
            "L3_access_control": {
              "model": "Attribute-Based Access Control (ABAC)",
              "enforcement": "Policy engine with audit logging",
              "principle": "Least privilege access",
              "review": "Quarterly access reviews"
            },
            "L4_application": {
              "isolation": "Data never directly accessed",
              "api_only": "All access through controlled APIs",
