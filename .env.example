# Echo Configuration
# Copy this file to .env and fill in your values

# ================================
# Echo Vault Configuration
# ================================
# Generate master key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ECHO_VAULT_MASTER_KEY=your_master_key_here

# Generate secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
ECHO_VAULT_SECRET_KEY=your_jwt_secret_key_here

# Token expiry in hours
ECHO_VAULT_TOKEN_EXPIRY_HOURS=24

# ================================
# API Configuration
# ================================
ECHO_API_HOST=0.0.0.0
ECHO_API_PORT=8000
ECHO_API_WORKERS=4

# ================================
# Database Configuration
# ================================
# PostgreSQL
POSTGRES_URL=postgresql://user:password@localhost:5432/echo_db

# MongoDB
MONGODB_URL=mongodb://localhost:27017/echo

# Redis
REDIS_URL=redis://localhost:6379/0

# ================================
# AI Provider API Keys
# ================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=org-your-org-id

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ================================
# Business System Connectors
# ================================

# Salesforce
SALESFORCE_CLIENT_ID=your_client_id
SALESFORCE_CLIENT_SECRET=your_client_secret
SALESFORCE_USERNAME=user@example.com
SALESFORCE_PASSWORD=your_password
SALESFORCE_SECURITY_TOKEN=your_security_token

# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_signing_secret

# Microsoft Teams
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token

# Stripe
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Square
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_LOCATION_ID=your_location_id

# ================================
# Cloud Provider Configuration
# ================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Azure
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_STORAGE_CONTAINER=your_container_name

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
GCP_PROJECT_ID=your_project_id
GCP_BUCKET_NAME=your_bucket_name

# ================================
# Message Queue Configuration
# ================================
RABBITMQ_URL=amqp://echo:echo_password@localhost:5672/
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ================================
# Monitoring & Logging
# ================================
LOG_LEVEL=INFO
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# ================================
# Email Configuration
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@echo.ai

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS SES
AWS_SES_REGION=us-east-1

# ================================
# Feature Flags
# ================================
ENABLE_WEBSOCKET=true
ENABLE_GRAPHQL=false
ENABLE_TELEMETRY=true
ENABLE_RATE_LIMITING=true

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ================================
# Security
# ================================
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ENABLE_CORS=true
ENABLE_CSRF=true

# ================================
# Engine Configuration
# ================================
ECHO_FREE_MAX_TOKENS=2000
ECHO_FREE_CREATIVITY=0.8

ECHO_LEX_JURISDICTION=US
ECHO_LEX_DEFAULT_FRAMEWORK=GDPR

ECHO_CORE_MAX_CONCURRENT_TASKS=10
ECHO_CORE_TASK_TIMEOUT_SECONDS=300

# ================================
# Development Settings
# ================================
DEBUG=false
ENVIRONMENT=production  # development, staging, production
