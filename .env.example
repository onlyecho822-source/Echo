# Echo Fact-Check App Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# API Keys for AI Services (at least one required for fact-checking)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: External Fact-Check APIs
GOOGLE_FACTCHECK_API_KEY=
CLAIMBUSTER_API_KEY=

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIR=./uploads

# Processing Settings
WHISPER_MODEL=base
MAX_AUDIO_DURATION_SECONDS=300
MAX_VIDEO_DURATION_SECONDS=300

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
